<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.monta.ListProduit">
    <children>
        <VBox prefHeight="900.0" prefWidth="250.0">
            <fx:include source="sidebar.fxml" />
        </VBox>
        <TableView fx:id="tableview" layoutX="270.0" layoutY="150.0" prefHeight="700.0" prefWidth="1100.0" style="-fx-background-color: white; -fx-border-color: #e0e0e0;">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="nomRcol" prefWidth="100.0" text="Nom Produit" />
                <TableColumn fx:id="descriptionCol" prefWidth="150.0" text="Description" />
                <TableColumn fx:id="imageCol" prefWidth="250.0" text="Image" />
                <TableColumn fx:id="quantityCol" prefWidth="80.0" text="Quantity" />
                <TableColumn fx:id="prixCol" prefWidth="80.0" text="Prix" />
                <TableColumn fx:id="typeCol" prefWidth="120.0" text="Type Produit" />
                <TableColumn fx:id="dateFabricationCol" prefWidth="130.0" text="Date Fabrication" />
                <TableColumn fx:id="dateExpirationCol" prefWidth="130.0" text="Date Expiration" />
                <TableColumn fx:id="actionsCol" prefWidth="120.0" text="Actions" />
            </columns>
        </TableView>
        <Button fx:id="addMealButton" layoutX="320.0" layoutY="110.0" mnemonicParsing="false" onAction="#naviguertoaddProduit" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 10; -fx-background-radius: 5; -fx-font-size: 12px;" text="Ajouter Produit" />
    </children>
</AnchorPane>
